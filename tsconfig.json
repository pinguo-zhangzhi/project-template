{
    "compileOnSave": false,
    "buildOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "noEmit": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "removeComments": false,
        "sourceMap": false,
        "inlineSourceMap": true,
        "noEmitHelpers": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "declaration": false
    },
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": false,
        "emitRequireType": false
    },
    "exclude": [
        "node_modules",
        "dist",
        "public"
    ]
}